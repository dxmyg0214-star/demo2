约束性实验1：
![约束性实验1界面](screenshots/Constraint1Activityscreen shots.png)

代码：
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- 标题  -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ConstraintLayoutTest"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Input 标签 -->
    <TextView
        android:id="@+id/inputLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Input"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 输入显示框  -->
    <TextView
        android:id="@+id/inputDisplay"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="0.0"
        android:textSize="24sp"
        android:gravity="center_vertical|end"
        android:padding="16dp"
        android:background="#8BC34A"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/inputLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- 第一行按钮：7 8 9 ÷ -->
    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="7"
        android:textSize="18sp"
        android:backgroundTint="#E0E0E0"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/inputDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn8"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="8"
        android:textSize="18sp"
        android:backgroundTint="#E0E0E0"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/inputDisplay"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintEnd_toStartOf="@id/btn9"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="9"
        android:textSize="18sp"
        android:backgroundTint="#E0E0E0"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/inputDisplay"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintEnd_toStartOf="@id/btnPlus1"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btnPlus1"
        android:layout_width="0dp"
